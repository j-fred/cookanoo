<% include ../../partials/head.ejs %>
<form action="/voitures/admin/update/<%= data._id %>" method="POST" class="needs-validation bg-light p-5" novalidate
    enctype="multipart/form-data">
    <div class="form-group mt-2">
        <h1 for="">Editer une voiture</h1>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="marque">Marque</label>
                <input type="text" class="form-control mt-2" name="marque" value="<%= data.marque %>" id="marque" aria-describedby=""
                    placeholder="Ford" required>
                <div class="invalid-feedback">
                    ajouter une marque
                </div>
            </div>
            <div class="form-group col-md-6">
                <label for="modele">Modèle</label>
                <input type="text" class="form-control mt-2" name="modele" value="<%= data.modele %>" id="modele" aria-describedby=""
                    placeholder="Fiesta" required>
                <div class="invalid-feedback">
                    ajouter un modèle
                </div>
            </div>
        </div>
        <div class="form-group">

            <label for="image">URL de l'image</label>

            <!-- UPLOAD DE L'IMAGE-->
            <input type="hidden" class="form-control mt-2" name="image" value="<%= data.image %>" id="image" aria-describedby="" placeholder="http://..."
                required>
            <input type="file" class="form-control mt-2" name="file-image" id="file-image">
            <span>
                <%= data.image %>
            </span>

            <div class="invalid-feedback">
                ajouter le lien vers l'image
            </div>
        </div>
        <div class="form-group">
            <label for="puissance">Puissance</label>
            <input type="text" class="form-control mt-2" name="puissance" value="<%= data.puissance %>" id="puissance" min="1" max="15"
                aria-describedby="" placeholder="5CV" required>
            <div class="invalid-feedback">
                ajouter la puissance
            </div>
        </div>
        <div class="form-group">
            <label for="motorisation">Motorisation</label>
            <select class="form-control mt-2" name="motorisation" id="motorisation">
                <option value="Diesel" <% if (data.motorisation=="Diesel" ){ %> selected
                    <% } %>>Diesel</option>
                <option value="Essence" <% if (data.motorisation=="Essence" ){ %> selected
                    <% } %>>Essence</option>
                <option value="Hybride" <% if (data.motorisation=="Hybride" ){ %> selected
                    <% } %>>Hybride</option>
                <option value="Electrique" <% if (data.motorisation=="Electrique" ){ %> selected
                    <% } %>>Electrique</option>
            </select>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="prix">Prix</label>
                <input type="number" class="form-control mt-2" name="prix" value="<%= data.prix %>" id="prix" step="100" aria-describedby=""
                    placeholder="1000" required>
                <div class="invalid-feedback">
                    ajouter un prix
                </div>
            </div>
            <div class="form-group col-md-6">
                <label for="couleur">Couleur</label>
                <input type="text" class="form-control mt-2" name="couleur" value="<%= data.couleur %>" id="couleur" aria-describedby=""
                    placeholder="Blanc" required>
                <div class="invalid-feedback">
                    ajouter une couleur
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="portes">Portes</label>
                <input type="number" class="form-control mt-2" name="portes" value="<%= data.portes %>" id="portes" aria-describedby=""
                    placeholder="3" required>
                <div class="invalid-feedback">
                    ajouter le nombre de portes
                </div>
            </div>
            <div class="form-group col-md-6">
                <label for="places">Places</label>
                <input type="number" class="form-control mt-2" name="places" value="<%= data.places %>" id="places" aria-describedby=""
                    placeholder="5" required>
                <div class="invalid-feedback">
                    ajouter le nombre de places
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="actif" class="mt-3">Actif</label>
            <input type="checkbox" name="actif" id="actif" <% if (data.actif=="on" ) { %> checked
            <% } %>>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Editer</button>
</form>
<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      var forms = document.getElementsByClassName('needs-validation');
      // Loop over them and prevent submission
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          $('#image').val($('#file-image').prop('files')[0].name);
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }      
          // verification du poids de l'image

          if ($('#image').prop('files')[0].size > 2000000) {
            event.preventDefault();
            event.stopPropagation();
            alert("fichier trop volumineux");
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
  </script>
  <% include ../../partials/footer.ejs %>